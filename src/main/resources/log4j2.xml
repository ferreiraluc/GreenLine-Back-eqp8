<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <JDBC name="JDBC" tableName="log">
            <ConnectionFactory class="org.apache.logging.log4j.jdbc.JdbcConnectionFactory">
                <DriverClassName>com.mysql.cj.jdbc.Driver</DriverClassName>
                <Url>jdbc:mysql://localhost:3306/greenline</Url>
                <Username>root</Username>
                <Password>root</Password>
            </ConnectionFactory>
            <Table name="log">
                <Column name="log_time" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}"/>
                <Column name="level" pattern="%level"/>
                <Column name="logger" pattern="%logger{1}"/>
                <Column name="message" pattern="%msg%n"/>
            </Table>
        </JDBC>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="JDBC"/>
        </Root>
    </Loggers>
</Configuration>
